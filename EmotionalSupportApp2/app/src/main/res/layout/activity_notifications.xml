<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NotificationsActivity">

    <Switch
        android:id="@+id/turnOffAllNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn off all notifications"
        android:textSize="60px"
        android:layout_weight="1" />

    <Button
        android:id="@+id/highFiveNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToHighFiveNotifications"
        android:text="High Five"
        android:textSize="60px"
        android:background="#F3E9DC"
        android:layout_weight="1" />

    <Button
        android:id="@+id/hugNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToHugNotifications"
        android:text="Hug"
        android:textSize="60px"
        android:background="#FCF6B1"
        android:layout_weight="1" />

    <Button
        android:id="@+id/motivationNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToMotivationNotifications"
        android:text="Motivation"
        android:textSize="60px"
        android:background="#F7B32B"
        android:layout_weight="1" />

    <Button
        android:id="@+id/talkNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToTalkNotifications"
        android:text="Talk"
        android:textSize="60px"
        android:background="#A4243B"
        android:layout_weight="1" />

    <Button
        android:id="@+id/connectNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToConnectNotifications"
        android:text="Connect"
        android:textSize="60px"
        android:background="#80A1C1"
        android:layout_weight="1" />
</LinearLayout>